<%= link_to memory, class:"card-memory", style:"background-image: url(#{cl_image_path(memory.medias.reverse[0].key, :width =>"400", :height =>"400", :gravity =>"faces", :crop =>"fill")}" do %>
    <div class="card-memory-infos <%= key_memories.empty? ? "" : "card-memory-event" %>">
      <% if key_memories.empty? %>
        <%= memory.date.strftime('%d %B %Y') %>
      <% else %>
        <%= memory.date.strftime('%d %B %Y') %> <i class="fa-solid fa-star color-red"></i>
      <% end %>
    </div>
<% end %>
