<div data-controller="sidebar">
  <div id="mySidenav" class="sidenav" data-sidebar-target="sidenav">
    <div class="navContent">
      <a class="closebtn" data-action="click->sidebar#close">&times;</a>
      <%= link_to "Memories", root_path%>
      <%= link_to "Timeline", timeline_path%>
      <a href="#">Profile</a>
    </div>
  </div>


  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <div class="container-fluid d-flex justify-content-between">

      <%# <div class="d-flex align-items-center justify-content-between"> %>
        <div class="navbar-brand">
          <%= image_tag "baby-steps.svg", data:{action: "click->sidebar#open"} %>
        </div>
        <div class="babysteps-name">
          <%= image_tag "logo.png" %>
        </div>
      <%# </div> %>

      <div class="d-flex align-items-center">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <% if user_signed_in? %>
          <%= cl_image_tag current_user.avatar.key, height: 50, gravity:"faces", crop:"fill", class: "avatar-bordered", style: "border-color : #{current_user.color}" %>
        <% else %>
          <img class="avatar-bordered avatar-yellow" alt="avatar-bordered" src="https://avatars.githubusercontent.com/u/9579324?v=4https://avatars.githubusercontent.com/u/9579324?v=4" />
        <% end %>
      </button>
      </div>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto">
            <% if user_signed_in? %>
              <li class="nav-item active">
                <%= link_to "My profile", "#", class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "My orders", "#", class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Login", new_user_session_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
    </div>
  </div>
</div>
