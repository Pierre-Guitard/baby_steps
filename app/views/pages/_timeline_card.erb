<% if timeline_event[:baby].first_name == "mathias" %>
  <div class="timeline-card card-left" style="margin-top:<%= timeline_event[:margin] %>px">
      <div class="timeline-card-infos infos-right">
        <h5 class="timeline-card-event" style="color:<%= timeline_event[:baby].color %>">First time <%= timeline_event[:event] %></h5>
        <p class="timeline-card-days"> at <%= timeline_event[:days] %> days</p>
      </div>
    <div class="timeline-card-img">
      <%= link_to timeline_event[:memory] do %>
      <%= cl_image_tag timeline_event[:baby].avatar.key, height: 50, gravity:"faces", crop:"fill", class: "avatar-bordered", style: "border-color : #{timeline_event[:baby]}.color}" %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="timeline-card card-right" style="margin-top:<%= timeline_event[:margin] %>px">
    <div class="timeline-card-img">
      <%= link_to timeline_event[:memory] do %>
      <%= cl_image_tag timeline_event[:baby].avatar.key, height: 50, gravity:"faces", crop:"fill", class: "avatar-bordered", style: "border-color : #{timeline_event[:baby]}.color}" %>
      <% end %>
    </div>
      <div class="timeline-card-infos">
        <h5 class="timeline-card-event" style="color: <%= timeline_event[:baby].color %>">First time <%= timeline_event[:event] %></h5>
        <p class="timeline-card-days"> at <%= timeline_event[:days] %> days</p>
      </div>
  </div>
<% end %>
